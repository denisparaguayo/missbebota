---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';

import { Image } from 'astro:assets'; // Para optimización de imágenes en Astro

// Importa las imágenes para la sección CTA y Eventos
import ctaImage from '../assets/images/miss-bebota-6.jpg'; // Imagen para la CTA
import eventImage1 from 'public/images/inscribite.jpg'; // Imagen para el evento 1
import eventImage2 from 'public/images/ensayo.jpeg'; // Imagen para el evento 2
import eventImage3 from 'public/images/gala.jpeg'; // Imagen para el evento 3
import baner from 'public/images/baner.png';
import Section from '~/components/Section.astro';

// Datos para la sección de próximos eventos
const eventos = [
	{
		id: 'inscripciones',
		title: 'Convocatoria Abierta para la Elección de Miss Bebota Asunción 2025',
		date: '1 de Junio de 2025',
		time: '08:00 hs',
		image: eventImage1, // asegurate de tener esta imagen importada
		alt: 'Formulario de inscripción a Miss Bebota Paraguay',
		link: '/inscripciones', // enlace a la página de detalles del evento
	},

	{
		id: 'ensayo-general',
		title: 'Ensayo General y Sesión de Fotos',
		date: '20 de Julio de 2025',
		time: '14:00 hs',
		image: eventImage2,
		alt: 'Niñas practicando en el escenario de Miss Bebota',
		link: '#',
	},
	{
		id: 'gran-final',
		title: 'Gran Gala Final y Coronación',
		date: '27 de Julio de 2025',
		time: '20:00 hs',
		image: eventImage3,
		alt: 'Coronación de Miss Bebota Paraguay',
		link: '#',
	},
];
---

<Layout
	pageTitle="Miss Bebota Paraguay - Inicio"
	title="Miss Bebota Paraguay: ¡Tu Sueño de Brillar Comienza Aquí!"
	description="Descubre el mundo de Miss Bebota Paraguay. Inscríbete, conoce a nuestras ex-Miss Bebotas y entérate de los próximos eventos.">
	<main>
		<Section>
			<div class="image-content order-1 md:order-2">
				<Image
					src={baner}
					alt="Niña sonriendo con una corona de Miss Bebota"
					widths={[400, 800]}
					sizes="(max-width: 768px) 100vw, 50vw"
					loading="eager"
					class="w-full h-auto object-cover"
				/>
			</div>
		</Section>

		<section></section>

		<section class="py-16 px-6 md:px-12 lg:px-20 text-center">
			<div
				class="container mx-auto grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
				<div class="text-content order-2 md:order-1">
					<h2
						class="text-4xl lg:text-5xl font-extrabold mb-6"
						style="color: var(--color-pink-barbie);">
						¡Tu Momento de Brillar ha Llegado!
					</h2>
					<p
						class="text-lg lg:text-xl leading-relaxed mb-8"
						style="color: #4A4A4A;">
						¿Siempre soñaste con subirte al escenario? Miss Bebota Paraguay te
						espera. ¡Animate!
					</p>
					<a
						href="https://wa.me/595981951315?text=¡Hola!%20Quisiera%20información%20para%20la%20inscripción%20a%20Miss%20Bebota%20Paraguay."
						target="_blank"
						rel="noopener noreferrer"
						class="cta-button inline-flex items-center px-8 py-4 rounded-full text-white font-semibold text-xl shadow-lg transition-all duration-300 transform hover:scale-105"
						style="background-color: var(--color-pink-bubblegum); color: var(--color-creamy-white);">
						Inscríbete por WhatsApp
					</a>
				</div>
				<div class="image-content order-1 md:order-2">
					<Image
						src={ctaImage}
						alt="Niña sonriendo con una corona de Miss Bebota"
						widths={[400, 800]}
						sizes="(max-width: 768px) 100vw, 50vw"
						loading="eager"
						class="rounded-3xl shadow-xl w-full h-auto object-cover"
					/>
				</div>
			</div>
		</section>

		<Section
			class="proximos-eventos py-16 px-6 md:px-12 lg:px-20 text-center bg-black"
			style="background-color: var(--color-lilac-soft);">
			<h2
				class="text-4xl lg:text-5xl font-extrabold mb-12"
				style="color: var(--color-pink-barbie);">
				Nuestros Próximos Eventos
			</h2>
			<div
				class="container mx-auto grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
				{
					eventos.map((evento) => (
						<a
							href={evento.link}
							class="event-card block bg-white rounded-3xl shadow-xl overflow-hidden transform transition-all duration-300 hover:scale-105 hover:shadow-2xl">
							<Image
								src={evento.image}
								alt={evento.alt}
								widths={[300, 600]}
								sizes="(max-width: 768px) 100vw, 33vw"
								loading="lazy"
								class="w-full h-48 md:h-56 object-cover"
							/>
							<div class="p-6">
								<h3
									class="text-2xl font-bold mb-2"
									style="color: var(--color-pink-bubblegum);">
									{evento.title}
								</h3>
								<p class="text-gray-600 mb-2">
									<span class="font-semibold">Fecha:</span> {evento.date}
								</p>
								<p class="text-gray-600 mb-4">
									<span class="font-semibold">Hora:</span> {evento.time}
								</p>
								<span
									class="inline-block px-6 py-2 rounded-full font-semibold transition-all duration-300"
									style="background-color: var(--color-yellow-pastel); color: var(--color-pink-barbie);">
									Ver Detalles
								</span>
							</div>
						</a>
					))
				}
			</div>
			<Section class="ver-candidatas py-16 px-6 md:px-12 lg:px-20 text-center">
				<h2 class="text-3xl md:text-4xl font-extrabold mb-6 text-pink-500">
					Conocé a Nuestras Candidatas
				</h2>
				<p class="text-lg text-gray-600 mb-8">
					Descubrí quiénes ya están participando en Miss Bebota Paraguay 2025.
				</p>
				<a
					href="/candidatas"
					class="inline-block bg-pink-500 hover:bg-pink-600 text-white text-lg font-semibold px-8 py-4 rounded-full transition-transform transform hover:scale-105 shadow-lg">
					Ver Candidatas
				</a>
			</Section>
		</Section>
	</main>
</Layout>

<style>
	/* Aquí puedes añadir estilos específicos para index.astro si no los manejas con Tailwind */

	/* Estilos para la sección CTA */
	.cta-inscripcion {
		background: linear-gradient(
			to right,
			var(--color-lilac-soft) 0%,
			var(--color-pink-pastel) 100%
		);
	}

	.cta-button {
		box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
	}

	.cta-button:hover {
		box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
	}

	/* Estilos para las tarjetas de eventos */
	.event-card {
		border: 4px solid var(--color-pink-pastel);
	}

	.event-card:hover {
		border-color: var(--color-pink-bubblegum);
	}
</style>
