---
// src/components/ExMissSlider.astro
// Importamos solo los estilos CSS de Swiper que necesitamos.
// import 'swiper/css';
// import 'swiper/css/navigation';
// import 'swiper/css/pagination';
// import 'swiper/css/effect-fade';

// Importa tus imágenes de ex-Miss Bebotas.
import missBebota1 from '../assets/images/miss-bebota-1.jpg';
import missBebota2 from '../assets/images/miss-bebota-2.jpg';
import missBebota3 from '../assets/images/miss-bebota-3.jpg';
import missBebota4 from '../assets/images/miss-bebota-4.jpg';
import missBebota5 from '../assets/images/miss-bebota-5.jpg';

// Datos de las ex-Miss Bebotas para el slider
const missBebotas = [
	{ src: missBebota1.src, alt: 'Miss Bebota Paraguay' },

	{ src: missBebota3.src, alt: 'Miss Bebota Paraguay' },
];

// Define las variables de color para que Tailwind y el CSS las puedan usar
const colors = {
	'dark-elegant': '#1a1a1a', // Negro casi puro para fondos
	'accent-red': '#B22222', // Rojo ladrillo/burdeos intenso
	'soft-gold': '#D4AF37', // Oro suave
	'creamy-white-new': '#F5F5DC', // Blanco roto para textos claros
	'gray-text': '#A0A0A0', // Gris para texto secundario
	'border-color': '#8B0000', // Rojo oscuro para bordes y acentos
	pinkBarbie: '#EE3BEE',
	pinkPastel: '#FDD3F4',
	pinkBubblegum: '#FF69B4',
	goldenGlitter: '#FFD700',
};
---

<section>
	<div
		class="min-h-screen flex items-center justify-center relative -mt-[var(--header-height, 0px)] overflow-hidden
                bg-black py-8 md:py-16">
		<div
			class="container mx-auto px-4 sm:px-6 lg:px-8 w-full h-full flex items-center justify-center">
			{/* El carrusel de Flowbite */}
			<div
				id="default-carousel"
				class="relative w-full overflow-hidden rounded-lg shadow-lg"
				data-carousel="slide">
				{/* Carousel wrapper */}
				<div
					class="relative h-64 sm:h-80 md:h-96 lg:h-[600px] xl:h-[700px] overflow-hidden rounded-lg">
					{
						missBebotas.map((miss, index) => (
							<div
								class={`hidden duration-700 ease-in-out ${index === 0 ? 'block' : ''}`}
								data-carousel-item>
								<img
									src={miss.src}
									class="absolute block w-full h-full object-cover -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2"
									alt={miss.alt}
								/>
								{/* Overlay con texto sobre la imagen */}
								<div class="absolute inset-x-0 bottom-0 bg-gradient-to-t from-black/70 to-transparent p-4 text-white text-center">
									<h2 class="text-xl md:text-2xl  drop-shadow-lg">
										{miss.alt}
									</h2>
								</div>
							</div>
						))
					}
				</div>

				{/* Slider indicators (puntos de paginación) */}
				<!-- <div
					class="absolute z-30 flex -translate-x-1/2 bottom-5 left-1/2 space-x-3 rtl:space-x-reverse">
					{
						missBebotas.map((_, index) => (
							<button
								type="button"
								class={`w-3 h-3 rounded-full ${index === 0 ? 'bg-[var(--goldenGlitter)]' : 'bg-white/50 hover:bg-white'}`}
								aria-current={index === 0 ? 'true' : 'false'}
								aria-label={`Slide ${index + 1}`}
								data-carousel-slide-to={index}></button>
						))
					}
				</div> -->

				{/* Slider controls (flechas) */}
				<button
					type="button"
					class="absolute top-0 start-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none"
					data-carousel-prev>
					<span
						class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-black/30 group-hover:bg-black/50 group-focus:ring-4 group-focus:ring-[var(--goldenGlitter)] group-focus:outline-none">
						<svg
							class="w-6 h-6 text-[var(--goldenGlitter)] rtl:rotate-180"
							aria-hidden="true"
							xmlns="http://www.w3.org/2000/svg"
							fill="none"
							viewBox="0 0 6 10">
							<path
								stroke="currentColor"
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M5 1 1 5l4 4"></path>
						</svg>
						<span class="sr-only">Previous</span>
					</span>
				</button>
				<button
					type="button"
					class="absolute top-0 end-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none"
					data-carousel-next>
					<span
						class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-black/30 group-hover:bg-black/50 group-focus:ring-4 group-focus:ring-[var(--goldenGlitter)] group-focus:outline-none">
						<svg
							class="w-6 h-6 text-[var(--goldenGlitter)] rtl:rotate-180"
							aria-hidden="true"
							xmlns="http://www.w3.org/2000/svg"
							fill="none"
							viewBox="0 0 6 10">
							<path
								stroke="currentColor"
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="m1 9 4-4-4-4"></path>
						</svg>
						<span class="sr-only">Next</span>
					</span>
				</button>
			</div>
		</div>
	</div>
</section>

<style define:vars={colors}>
	/* Estilos para asegurar que las variables de color funcionen bien con Tailwind */
	.group-focus\:ring-\[\--goldenGlitter\] {
		--tw-ring-color: var(--goldenGlitter) !important;
	}
	.text-\[\--goldenGlitter\] {
		color: var(--goldenGlitter) !important;
	}
	.bg-\[\--goldenGlitter\] {
		background-color: var(--goldenGlitter) !important;
	}

	.ex-miss-slider {
		/* No necesitamos un fondo aquí si el div padre ya es negro y las imágenes cubren */
		/* background: black; */
		border-bottom: 8px solid var(--pinkBubblegum);
		box-shadow: 0 4px 15px rgba(0, 0, 0, 0.15);
		border-radius: 15px;
	}

	/* Las imágenes están manejadas por las clases de Tailwind y Flowbite JS */
</style>

<script>
	// Se asume que flowbite.min.js se importa globalmente en tu layout.
	// Si no es así, descomenta la línea de importación CDN al final del componente.
</script>
<script
	is:inline
	src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.3.0/flowbite.min.js"
></script>
